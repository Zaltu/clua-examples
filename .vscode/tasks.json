{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "buildrunluafile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-o", "runluafile.exe", "-I /usr/include", "runluafile.cpp", "-llua", "-ldl"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "buildluainterpreter",
            "type": "shell",
            "command": "g++",
            "args": [
                "-o", "luainterpreter.exe", "-I /usr/include", "luainterpreter.cpp", "-llua", "-ldl"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}